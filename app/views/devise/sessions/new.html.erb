<div class="container">
    
<div class="row">

<div class="card-trip new">
    
<div class="col-md-12 p-2 mt-5">

<div class="font-weight-bold display-4 text-center">
Log in
</div>
<br>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>
  <br>

  <div class="form-actions">
    <center><%= f.button :submit, "Log in", class: 'btn btn-primary' %></center>
    <br>
    <center><%= render "devise/shared/links" %></center>
  </div>
  <br>
<% end %>


</div>
</div>
</div>
</div>