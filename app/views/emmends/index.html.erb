<p id="notice"><%= notice %></p>

 <%= form_tag emmends_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Encontre uma Emenda!"
    %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>


<%= link_to 'Nova Emenda', new_emmend_path %>







    <!-- table emmends

    name
    user.name

    thema

    description
    project
   -->








<div class="container">

  <div class="cards">

    <% @emmends.each do |emmend| %>

      <div class="card-category">

        <div>
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/arthur-littm", class: "avatar-large", alt: "avatar-large" %>
         <!--  <h2><%#= "Avatar do #{emmend.user.name}" %></h2> -->
        </div>

        <div class="my-3" >
          <h2><%= "#{emmend.project}" %></h2>
        </div>

        <div class="my-3">
          <h3><%= link_to "#{emmend.thema}", emmend, class: "btn-show" %></h3>
        </div>









        <% if current_user == emmend.user %>


          <%#= link_to 'Edit', edit_emmend_path(emmend), class: "btn btn-danger" %>

          <%= link_to edit_emmend_path(emmend), class: "btn btn-ghost my-3" do %>
            <i class="far fa-edit"></i>
          <% end %>

          <%= link_to emmend, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-delete" do %>
            <i class="far fa-trash-alt"></i>
          <% end %>

        <% end %>

      </div>
    <% end %>

  </div>

</div>



















