<p id="notice"><%= notice %></p>

 <%= form_tag emmends_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Encontre uma Emenda!"
    %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>


<%= link_to 'Nova Emenda', new_emmend_path %>







    <!-- table emmends

    name
    user.name

    thema

    description
    project
   -->








<div class="container">

  <div class="cards">

    <% @emmends.each do |emmend| %>

      <div class="card-category">

        <div>
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/arthur-littm", class: "avatar-large", alt: "avatar-large" %>
          <h2><%= "Avatar do #{emmend.user.name}" %></h2>
        </div>

        <div>
          <h2><%= "#{emmend.project}" %></h2>
        </div>

        <div>
          <h3><%= "#{emmend.thema}" %></h3>
        </div>

        <div class="my-5">
          <h2><%= "#{emmend.name}" %></h2>
        </div>

        <div>
          <p><%= "#{emmend.description}" %></p>
        </div>

        <%= link_to 'Show', emmend %>

        <% if current_user == emmend.user %>


          <%#= link_to 'Edit', edit_emmend_path(emmend), class: "btn btn-danger" %>

          <%= link_to "Edit", edit_emmend_path(emmend), class: "btn btn-ghost" %>

          <%= link_to 'Destroy', emmend, method: :delete, data: { confirm: 'Are you sure?' } %>

        <% end %>

      </div>
    <% end %>

  </div>

</div>



















