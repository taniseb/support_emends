<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand logo-margin" do %>
    <%= image_tag "relate_logo.png" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">

      <%= form_tag emmends_path, class: "form-inline my-2 my-lg-0", method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control mr-sm-2",
          placeholder: "Busque uma emenda"
          %>
        <%= submit_tag "Pesquisar", class: "btn btn-flat my-2 my-sm-0" %>
      <% end %>
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "Criar", new_emmend_path, class: "nav-link logo-margin" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/vcanna", class: "avatar dropdown-toggle logo-margin", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Perfil", user_root_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item" style="margin-right:30px">
          <%= link_to "Login", new_user_session_path, class: "btn btn-flat" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
